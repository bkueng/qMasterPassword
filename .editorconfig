# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cpp,h}]
indent_style = tab
indent_size = 8

[CMakeLists.txt]
indent_size = 4

[*.{qrc,ts,xml}]
indent_size = 4

[*.{ui,appdata.xml}]
indent_size = 1
